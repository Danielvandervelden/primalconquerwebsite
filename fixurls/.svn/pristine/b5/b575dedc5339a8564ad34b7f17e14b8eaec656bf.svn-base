* { margin:0;padding:0; }
body{ font-family:Helvetica,Verdana,Arial;width:600px;margin:10px auto;border:1px dotted orange;padding:40px; }
h1 { margin-bottom:1em;text-transform:uppercase; }
h1,legend{font-weight:bold;color:orange;}
ul{padding-left:30px;list-style-type:none;}
pre{overflow:auto;}

#logo{float:right;position:relative;top:-30px;right:-25px;}

.clear{clear:both;}

input{ display:block;margin-top:1.5em; }
label { display: inline; }
input[type='checkbox'],input[type='radio'] { display: inline; }
input[type=text]{width:300px;}

fieldset{margin:8px;padding:10px;}

ul.response { padding:10px;padding-bottom:0px;margin:1em 0; list-style: disc;list-style-position: inside; }
ul.response span{font-weight:bold;}
ul.response li { margin-bottom: 8px; }

ul.error{border:1px solid red; color:#F00;}
ul.success{border:3px solid green;}

div.replacement { padding-bottom: 1.5em; }
div.replacement input { margin: 0.5em 0em; }

#submit { border: 0px;margin:0;padding:0; }
#submit input[type='submit']{float:right;}